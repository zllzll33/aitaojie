<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/myColor"
       >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/title_my"
            android:textColor="@color/text_black"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/set"
            android:layout_width="22dp"
            android:layout_height="22dp"
             android:src="@mipmap/my_set"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_line"/>
    <com.android.zlibrary.customView.CircleImageView
        android:layout_marginTop="20px"
        android:id="@+id/header"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_centerInParent="true"
        android:src="@mipmap/my_default_avatar"
        app:border_width="2dp"
        app:border_color="@color/header"/>
    <TextView
        android:id="@+id/nick"
        android:layout_marginTop="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:text=""
        android:textColor="@color/text_black"/>
    <TextView
        android:id="@+id/sign"
        android:layout_marginTop="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text=""
        android:textColor="@color/text_gray"/>
    <View
        android:layout_marginTop="10px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DivLine"/>
    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
         >
      <LinearLayout
          android:id="@+id/order"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:padding="10px"
          android:gravity="center"
          android:background="@color/text_my_text_icon"
          android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/icon_my_order"/>
          <TextView
              android:layout_marginTop="10px"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_black"
              android:text="订单"
              android:textSize="@dimen/text_small"/>
      </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:background="@color/text_my_text_icon"
            android:id="@+id/appointment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10px"
            android:gravity="center">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@mipmap/icon_my_appointment"/>
            <TextView
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:text="预约"
                android:textSize="@dimen/text_small"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:background="@color/text_my_text_icon"
            android:id="@+id/cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10px"
            android:gravity="center">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@mipmap/icon_my_cart"/>
            <TextView
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:text="购物车"
                android:textSize="@dimen/text_small"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:background="@color/text_my_text_icon"
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10px"
            android:gravity="center">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@mipmap/my_colloection"/>
            <TextView
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:text="收藏"
                android:textSize="@dimen/text_small"/>
        </LinearLayout>
</LinearLayout>
    <View
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/DivBlock"/>
    <LinearLayout
        android:layout_marginTop="20px"
        android:id="@+id/my_coupon"
        android:layout_marginLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"
            android:text="我的优惠劵"/>
        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_marginRight="20px"
            android:layout_gravity="center"
            android:layout_width="@dimen/icon_right_go_width"
            android:layout_height="@dimen/icon_right_go_height"
            android:src="@mipmap/icon_right_go"/>
    </LinearLayout>
    <View
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DivLine"/>
    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_marginLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small"
            android:text="我的足迹"/>
        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/my_more_footprint"
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多>>"
            />
    </LinearLayout>
    <com.android.zlibrary.customView.ZHorizontalScroll
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px">
        <LinearLayout
            android:id="@+id/ll_little_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </com.android.zlibrary.customView.ZHorizontalScroll>
</LinearLayout>