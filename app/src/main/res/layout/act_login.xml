<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="60px"
    android:layout_marginRight="60px">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="20px"
    android:layout_marginBottom="20px"
    android:orientation="horizontal"
    >
    <View
        android:layout_width="150px"
        android:layout_height="150px"
        android:background="@mipmap/logo"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large"
        android:text="账户:    "
        android:textColor="@color/text_black"/>
        <EditText
            android:id="@+id/accout"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textSize="40px"
            android:background="@drawable/shape_login_edit"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/DivLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:textColor="@color/text_black"
            android:text="密码:    "/>
        <EditText
            android:id="@+id/password"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:password="true"
            android:textSize="40px"
            android:background="@drawable/shape_login_edit"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/DivLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:textColor="#999999"
            android:text="快速注册"/>
        <View
            android:layout_width="0px"
            android:layout_height="5px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:textColor="#999999"
            android:text="忘记密码"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="60px"
        android:id="@+id/login"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:textColor="#ffffff"
        android:textSize="40px"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/shape_login_text"
        android:text="登录"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40px">
       <View
           android:layout_gravity="center_vertical"
           android:layout_width="50dp"
           android:layout_height="2dp"
           android:background="@color/DivLine"/>
        <TextView
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:textColor="#a4a4a4"
            android:text="第三方账号登录"/>
        <View
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@color/DivLine"/>
        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px">
        <LinearLayout
            android:id="@+id/QQ_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="100px">
            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:src="@mipmap/login_qq"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:textSize="@dimen/text_small"
                android:textColor="#A5A5A5"
                android:layout_marginTop="5dp"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/WX_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50px">
            <View
                android:layout_marginLeft="10px"
                android:layout_width="120px"
                android:layout_height="120px"
                android:background="@mipmap/login_wx"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_small"
                android:textColor="#A5A5A5"/>
        </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_marginTop="80px"
        android:id="@+id/SMS_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短信验证码登录"
        android:textSize="40px"
        android:textColor="#8C8C8C"
        android:layout_gravity="center"/>
   </LinearLayout>