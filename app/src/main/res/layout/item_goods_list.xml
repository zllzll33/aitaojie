<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.android.zlibrary.customView.ZImageView
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@mipmap/test"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textSize="20dp"
        android:textColor="#747474"
        android:text="深海大虾200g虾类日料烧烤海鲜水产"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/current_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="#FF6E31"
            android:text="￥66"
            android:layout_alignParentLeft="true"
            android:gravity="center"
       />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/origin_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textColor="@color/DivLine"
            android:text="￥89"
            android:layout_toRightOf="@+id/current_price"
            android:layout_marginLeft="5dp"
            android:gravity="center"
      />
        <ImageView
            android:id="@+id/cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/my_collect_add_cart"
            android:layout_alignParentRight="true"
           />
        </RelativeLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>