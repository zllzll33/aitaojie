<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
<RelativeLayout
    android:id="@+id/rl_title"
android:layout_width="match_parent"
android:layout_height="@dimen/title_height"
android:background="@color/mainColor"
   >
        <ImageView
            android:id="@+id/cart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_home_cart"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:text=""
    android:textColor="@color/text_main_title"
    android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/message"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_home_message"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/scan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_home_scan"
            android:layout_toLeftOf="@+id/message"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"/>
</RelativeLayout>
<com.android.zlibrary.customView.ZSwipeBothRefresh
    android:layout_below="@+id/rl_title"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="180dp">
        <FrameLayout
            android:id="@+id/adv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
           <RelativeLayout
               android:visibility="gone"
               android:id="@+id/tag"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="10dp"
               android:layout_marginBottom="10dp"
               android:layout_alignParentBottom="true"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:background="@drawable/shape_home_adv_tag"
               android:layout_width="190dp"
               android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/focus_num"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="10dp"
                  android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/text_small"
                 android:textColor="@color/text_black"
                 android:text="关注:500"/>
               <View
                   android:layout_centerInParent="true"
                   android:layout_width="2dp"
                   android:layout_height="15dp"
                   android:background="@color/DivLine"/>
                   <TextView
                       android:id="@+id/browse_num"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/text_small"
                       android:textColor="@color/text_black"
                       android:text="浏览:500"/>
           </RelativeLayout>
               <TextView
                   android:id="@+id/collect_store"
                   android:layout_alignTop="@+id/tag"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:paddingRight="10dp"
                   android:paddingLeft="10dp"
                   android:textSize="@dimen/text_small"
                   android:textColor="@color/text_black"
                   android:background="@drawable/shape_home_adv_tag"
                   android:text="收藏店铺"
                   android:visibility="gone"/>
           </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_shop_info"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
              <ImageView
                  android:layout_marginLeft="5dp"
                  android:id="@+id/icon_map"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:src="@mipmap/icon_home_map"/>
                <TextView
                    android:id="@+id/addr"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/icon_map"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:maxWidth="180dp"
                    android:layout_height="wrap_content"
                    android:text="杭州市拱墅区祥园路泰嘉园L座702"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/text_black"/>
                <ImageView
                    android:id="@+id/direct"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/addr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_home_direct"/>
                <TextView
                    android:layout_toLeftOf="@+id/icon_call"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系客服"
                    android:textSize="@dimen/text_middle"
                    android:textColor="@color/text_black"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/icon_call"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_home_call"/>
            </RelativeLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/good_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


</LinearLayout>


</com.android.zlibrary.customView.ZSwipeBothRefresh>
    <ImageView
        android:id="@+id/home_my_foot"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="@dimen/suspension_icon_height"
        android:layout_height="@dimen/suspension_icon_height"
        android:src="@mipmap/home_foot"/>
</RelativeLayout>
