<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_my"/>
    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/mobile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textSize="40px"
            android:background="@drawable/shape_login_edit"/>
        <TextView
            android:id="@+id/getSMS"
            android:layout_width="200px"
            android:layout_height="80px"
            android:textSize="30px"
            android:textColor="#8C8C8C"
            android:text="获取验证码"
            android:gravity="center"
            android:background="@drawable/shape_register_text"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/DivLine"/>
    <EditText
        android:id="@+id/SMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:textSize="40px"
        android:layout_marginTop="40px"
        android:background="@drawable/shape_login_edit"/>
    <View
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/DivLine"/>
    <TextView
        android:layout_marginTop="60px"
        android:id="@+id/login"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:textColor="#ffffff"
        android:textSize="40px"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/shape_login_text"
        android:text="手机验证码登录"/>
        </LinearLayout>
</LinearLayout>