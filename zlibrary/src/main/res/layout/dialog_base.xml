<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_text"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/dialog_menu_tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_dialog_item"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/dialogTitle"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
         />

   <LinearLayout
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
       >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >
        <TextView
            android:id="@+id/dialog_tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/height_dialog_item"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/dialogCancel"
            android:textSize="@dimen/text_size_button" />
        <View
            android:id="@+id/stroke"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/DivLine"/>
        <TextView
            android:id="@+id/dialog_tv_comfirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/height_dialog_item"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/main"
            android:textSize="@dimen/text_size_button" />
    </LinearLayout>


</LinearLayout>